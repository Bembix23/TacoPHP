{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ post.author }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ post.address }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ post.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ post.ville }}</td>
            </tr>
            <tr>
                <th>MajDate</th>
                <td>{{ post.majDate ? post.majDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndMission</th>
                <td>{{ post.endMission ? post.endMission|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Contrat</th>
                <td>{{ post.contrat }}</td>
            </tr>
            <tr>
                <th>TypeContrat</th>
                <td>{{ post.typeContrat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
