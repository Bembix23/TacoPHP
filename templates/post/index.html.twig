{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>CreatedAt</th>
                <th>Address</th>
                <th>PostalCode</th>
                <th>Ville</th>
                <th>MajDate</th>
                <th>EndMission</th>
                <th>Contrat</th>
                <th>TypeContrat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.author }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.address }}</td>
                <td>{{ post.postalCode }}</td>
                <td>{{ post.ville }}</td>
                <td>{{ post.majDate ? post.majDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.endMission ? post.endMission|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.contrat }}</td>
                <td>{{ post.typeContrat }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
